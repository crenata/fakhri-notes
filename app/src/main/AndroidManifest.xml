<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scranaver.notes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_notes"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_notes_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notes">
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Notes.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Notes.NoActionBar" />
        <activity
            android:name=".ui.forgot.ForgotActivity"
            android:exported="false"
            android:theme="@style/Theme.Notes.NoActionBar" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Notes.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Notes.NoActionBar" />
        <activity
            android:name=".ui.note.AddNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.Notes.NoActionBar" />
        <activity
            android:name=".ui.detail.DetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Notes.NoActionBar" />
        <activity
            android:name=".ui.about.AboutActivity"
            android:exported="false"
            android:theme="@style/Theme.Notes.NoActionBar" />
    </application>

</manifest>